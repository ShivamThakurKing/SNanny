<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/recylerview_background"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rec_img_background"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food1"
            android:id="@+id/productimageviewcompleted"
            android:layout_width="120dp"
            android:layout_height="70dp">

        </ImageView>

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageviewpersoncompleted"
            android:src="@drawable/food1"
            android:foreground="@drawable/img"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageView>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <TextView
                android:fontFamily="sans-serif-medium"
                android:text="Shivam Chib"
                android:textColor="@android:color/black"
                android:id="@+id/nametextviewcompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:fontFamily="sans-serif-thin"
                android:drawableLeft="@drawable/loc_small"
                android:text="Mohali"
                android:textColor="@android:color/black"
                android:id="@+id/locationtextviewcompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>

        <RatingBar

            android:layout_marginLeft="5dp"
            android:id="@+id/personratingbarcompleted"
            android:rating="3"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:stepSize="1"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RatingBar>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:fontFamily="sans-serif-medium"
            android:id="@+id/foodnametextviewcompleted"
            android:textStyle="normal"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Natural Herbs">

        </TextView>
        <TextView
            android:fontFamily="sans-serif-thin"
            android:id="@+id/deliveryamounttextviewcompleted"
            android:paddingRight="20dp"
            android:textStyle="normal"
            android:textAlignment="textEnd"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="5 Months ago">

        </TextView>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/completedtextview"
            android:textStyle="normal"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size15"
            android:layout_marginRight="@dimen/mar20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height40"
            android:layout_marginLeft="20dp"
            android:text="@string/completed"
            >

        </TextView>



    </RelativeLayout>


</LinearLayout>