<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="@dimen/width120"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_marginTop="@dimen/mar40"
                android:layout_gravity="center"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileimagesettings"
                android:layout_width="@dimen/width100"
                android:layout_height="@dimen/height100"
                android:src="@drawable/food"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_alignParentRight="true"
                android:id="@+id/profileimagecheck1"
                android:layout_width="@dimen/width30"
                android:layout_height="@dimen/height30"
                android:layout_marginTop="@dimen/mar40"
                android:src="@drawable/ic_add_black_24dp"
                android:background="@drawable/imagebutton_background"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/mar20"
            android:id="@+id/edittextprofilesettings"
            android:elevation="@dimen/elevation5"
            android:background="@drawable/textview_background"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="@dimen/width300"
            android:layout_height="@dimen/height50"
            android:weightSum="100">

            <EditText
                android:paddingLeft="@dimen/pad10"
                android:background="@null"
                android:layout_marginLeft="@dimen/mar10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/size15"
                android:textColor="@android:color/black"
                android:hint="@string/namevalue"
                android:id="@+id/namesettings"
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/mar20"
            android:elevation="@dimen/elevation5"
            android:background="@drawable/textview_background"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="@dimen/width300"
            android:layout_height="@dimen/height50"
            android:weightSum="100">



            <EditText
                android:paddingLeft="@dimen/pad10"
                android:background="@null"
                android:layout_marginLeft="@dimen/mar10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/size15"
                android:textColor="@android:color/black"
                android:hint="@string/email"
                android:id="@+id/emailsettings"
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </EditText>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/mar20"
            android:id="@+id/edittextprofilesettings2"
            android:elevation="@dimen/elevation5"
            android:background="@drawable/textview_background"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="@dimen/width300"
            android:layout_height="@dimen/height50"
            android:weightSum="100">



            <EditText
                android:paddingLeft="@dimen/pad10"
                android:background="@null"
                android:layout_marginLeft="@dimen/mar10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/size15"
                android:textColor="@android:color/black"
                android:hint="@string/phonenumber"
                android:id="@+id/mobilenumbersetting"
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </EditText>



        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/mar40"
            android:layout_marginTop="@dimen/mar20"
            android:id="@+id/linearlayoutchangepassword"
            android:elevation="@dimen/elevation5"
            android:background="@drawable/textview_background"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="@dimen/width300"
            android:layout_height="@dimen/height50"
            android:weightSum="100">

            <TextView
                android:gravity="center|start"
                android:paddingLeft="@dimen/pad10"
                android:background="@null"
                android:layout_marginLeft="@dimen/mar10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/size15"
                android:textColor="@android:color/black"
                android:hint="@string/changePassword"
                android:id="@+id/changePasswordsettings"
                android:layout_weight="90"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <ImageView
                android:id="@+id/changepasswordimageview"
                android:src="@drawable/ic_right_black_arrow_24dp"
                android:layout_weight="10"

                android:layout_width="@dimen/width0"
                android:layout_height="match_parent">

            </ImageView>

        </LinearLayout>

        <Button
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/mar10"
            android:text="@string/save"
            android:background="@drawable/button_clicked"
            android:id="@+id/spinnerspecialities"
            android:layout_weight="40"
            android:layout_width="@dimen/width200"
            android:layout_height="@dimen/height0">

        </Button>
    </LinearLayout>

</ScrollView>