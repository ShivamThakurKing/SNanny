<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NaniLogin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:id="@+id/imagesimple"
        android:layout_width="140dp"
        android:layout_height="160dp">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/firstlayout"
        android:elevation="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="320dp"
        android:layout_height="70dp">
        <ImageView

            android:src="@drawable/ic_email"
            android:id="@+id/loginimageview"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>

        <EditText
            android:paddingLeft="15dp"
            android:focusable="true"
            android:background="@drawable/edit_text_background"
            android:textStyle="normal"
            android:textSize="18dp"
            android:hint="Email "
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/loginimageview"
            android:layout_width="230dp"
            android:layout_height="50dp">

        </EditText>


    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/secondlayout"
            android:layout_below="@id/firstlayout"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"

            android:layout_width="320dp"
            android:layout_height="60dp">
            <ImageView

                android:src="@drawable/ic_padlock"
                android:id="@+id/passwordimageview"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp">

            </ImageView>

            <EditText
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:focusable="true"
                android:background="@drawable/edit_text_background"
                android:textStyle="normal"
                android:textSize="18dp"
                android:hint="Password "
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/passwordimageview"
                android:layout_width="230dp"
                android:layout_height="50dp">

            </EditText>


        </RelativeLayout>

     <RelativeLayout
         android:id="@+id/thirdlayout"
         android:layout_marginTop="5dp"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/secondlayout"
         android:layout_width="320dp"
         android:layout_height="27dp">

         <TextView
             android:textSize="14dp"
             android:id="@+id/forgotPasswordtextview"
             android:textColor="@android:color/black"
             android:layout_marginRight="25dp"
             android:layout_alignParentRight="true"
             android:text="@string/forgotpassword"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

         </TextView>



     </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fourthlayout"
        android:layout_below="@+id/thirdlayout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:background="@drawable/button_clicked"
            android:text="@string/nani"
            android:id="@+id/nanibutton"
            android:layout_height="40dp"
            android:layout_width="270dp">

        </Button>

    </RelativeLayout>

        <TextView
            android:textColor="@android:color/darker_gray"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fourthlayout"
            android:text="OR"
            android:id="@+id/ortextview"
            android:layout_width="100dp"
            android:layout_height="40dp">

        </TextView>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ortextview"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="wrap_content">


        <ImageView

            android:background="@drawable/button_background"
            android:src="@drawable/ic_facebook"
            android:layout_marginLeft="30dp"
            android:id="@+id/facebookimageview"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>
        <ImageView
            android:layout_toRightOf="@id/facebookimageview"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gmail"
            android:layout_marginLeft="50dp"
            android:id="@+id/gmailimageview"
            android:layout_width="60dp"
            android:layout_height="50dp">

        </ImageView>
        <ImageView
            android:layout_toRightOf="@id/gmailimageview"
            android:src="@drawable/ic_instagram"
            android:layout_marginLeft="50dp"
            android:id="@+id/instagramimageview"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>
        <TextView
            android:layout_marginLeft="100dp"
            android:layout_marginTop="18dp"
            android:layout_below="@id/gmailimageview"
            android:textSize="14dp"
            android:id="@+id/signuptextview"
            android:textColor="@android:color/black"

            android:text="@string/newaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView

            android:layout_toRightOf="@id/signuptextview"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gmailimageview"
            android:textSize="14dp"
            android:id="@+id/signuptextview2"
            android:textColor="@android:color/holo_red_light"

            android:text="@string/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>




    </RelativeLayout>


    </RelativeLayout>




    </LinearLayout>


</ScrollView>