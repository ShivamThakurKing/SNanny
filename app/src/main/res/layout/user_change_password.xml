<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/mar100"
        android:id="@+id/edittextprofilesettings"
        android:elevation="@dimen/elevation5"
        android:background="@drawable/textview_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="@dimen/width300"
        android:layout_height="@dimen/height50"
        android:weightSum="100">

        <EditText
            android:paddingLeft="@dimen/pad10"
            android:background="@null"
            android:layout_marginLeft="@dimen/mar10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/size15"
            android:textColor="@android:color/black"
            android:hint="@string/oldpassword"
            android:id="@+id/oldpasswordedittext"
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/mar40"
        android:id="@+id/edittextpasswordsettings"
        android:elevation="@dimen/elevation5"
        android:background="@drawable/textview_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="@dimen/width300"
        android:layout_height="@dimen/height50"
        android:weightSum="100">

        <EditText
            android:paddingLeft="@dimen/pad10"
            android:background="@null"
            android:layout_marginLeft="@dimen/mar10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/size15"
            android:textColor="@android:color/black"
            android:hint="@string/newPassword"
            android:id="@+id/newpasswordedittext"
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/mar40"
        android:id="@+id/edittextpasswordsettings2"
        android:elevation="@dimen/elevation5"
        android:background="@drawable/textview_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="@dimen/width300"
        android:layout_height="@dimen/height50"
        android:weightSum="100">

        <EditText
            android:paddingLeft="@dimen/pad10"
            android:background="@null"
            android:layout_marginLeft="@dimen/mar10"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/size15"
            android:textColor="@android:color/black"
            android:hint="@string/confirmPassword"
            android:id="@+id/confirmpasswordedittext"
            android:layout_weight="100"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </EditText>

    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/mar40"
        android:layout_marginBottom="@dimen/mar10"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="@drawable/button_clicked"
        android:text="@string/done"
        android:id="@+id/nanibutton"
        android:layout_height="@dimen/height40"
        android:layout_width="@dimen/width300">

    </Button>

</LinearLayout>